{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "echo 'Building for Vercel'",
    "build": "tsc -p tsconfig.json",
    "vercel-build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ignore-pattern '__tests__/**'",
    "test": "vitest run unit --config __tests__/vitest.config.ts",
    "test:coverage": "vitest run unit --config __tests__/vitest.config.ts --coverage.enabled --coverage.all",
    "prettier": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prettier:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "test:watch": "vitest unit",
    "dev": "nodemon build/src/main.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "google-auth-library": "^10.5.0",
    "mongodb": "^7.0.0",
    "multer": "^2.0.2",
    "node-pty": "^1.1.0",
    "tslib": "~2.8",
    "web-push": "^3.6.7",
    "node-cron": "3.0.3",
    "ws": "^8.19.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/js": "~9.17",
    "@types/cors": "^2.8.19",
    "@types/eslint__js": "~8.42",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.27",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/parser": "~8.19",
    "@vitest/coverage-v8": "~2.1",
    "@vitest/eslint-plugin": "~1.1",
    "eslint": "~9.17",
    "eslint-config-prettier": "~9.1",
    "globals": "~15.14",
    "nodemon": "^3.1.11",
    "prettier": "~3.4",
    "rimraf": "~6.0",
    "ts-api-utils": "~2.0",
    "typescript": "~5.7",
    "typescript-eslint": "~8.19",
    "vitest": "~2.1"
  },
  "volta": {
    "node": "22.12.0"
  }
}
